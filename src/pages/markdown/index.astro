---
import { getCollection } from 'astro:content';
import Pages from '../../layouts/Pages.astro';
const posts = await getCollection('posts');
---

<Pages>
  <div id="content" class="flex flex-col align-center justify-center p-16">
    <h1>Posts</h1>
    <ul class="list w-full">
      {
        posts.map((post) => (
          <li class="list-row mt-2 bg-base-300 rounded-box shadow-md">
            <a href={`/markdown/${post.slug}/`}>
              <div class="list-col-grow">
                <div class="font-bold text-lg">{post.data.title}</div>
                <div class="text-xs uppercase font-semibold opacity-60">{post.data.date}</div>
              </div>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</Pages>

<style>
  #content {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    padding: 16px;
  }

  h1 {
    font-size: 22px;
    margin-top: 0.25em;
  }
</style>
